<div class="self-center w-full px-8 py-4 mt-8 bg-white rounded-lg shadow-lg dark:bg-gray-800">
    <div class="flex  w-full justify-between ">
        <div>
        <h2 class="mt-2 text-xl font-semibold text-gray-800 dark:text-white md:mt-0">
        <%= message.title %>
        </h2>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-200">
        <%= message.message %>
        </p>
        </div>
        <% if (currentUser && currentUser.memberstatus === 'Admin') { %>
        <div class="flex gap-2">
            <a class="w-8" href="/edit/message?msgid=<%= message.id %>">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 26 26"><title>note-edit-outline</title><path fill="#ffffff" d="M18.13 12L19.39 10.74C19.83 10.3 20.39 10.06 21 10V9L15 3H5C3.89 3 3 3.89 3 5V19C3 20.1 3.89 21 5 21H11V19.13L11.13 19H5V5H12V12H18.13M14 4.5L19.5 10H14V4.5M19.13 13.83L21.17 15.87L15.04 22H13V19.96L19.13 13.83M22.85 14.19L21.87 15.17L19.83 13.13L20.81 12.15C21 11.95 21.33 11.95 21.53 12.15L22.85 13.47C23.05 13.67 23.05 14 22.85 14.19Z" /></svg>
            </a>
            <a class="w-8" href="/delete/message?msgid=<%= message.id %>">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><title>delete-outline</title><path fill="#dc2626" d="M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19M8,9H16V19H8V9M15.5,4L14.5,3H9.5L8.5,4H5V6H19V4H15.5Z" /></svg>
            </a>
        </div>
        <% } %>
    </div>
    <div class="flex justify-between items-center mt-4 w-full">
        <% if (currentUser) { %>
            <p class="text-xs font-medium text-teal-600 dark:text-teal-300">
                <%= currentUser.memberstatus === 'User' ? 'Some time ago...' : message.date.toString().substring(0, 24) %>
            </p>
            <p class="text-lg font-medium text-teal-600 dark:text-teal-300" tabindex="0" role="link">
                <%= currentUser.memberstatus === 'User' ? 'Anonymous' : message.fullname %>
            </p>
        <% } else { %>
            <div class="flex justify-end items-center w-full">
                <p class="text-lg font-medium text-teal-600 dark:text-teal-300" tabindex="0" role="link">
                    Anonymous
                </p>
            </div>
        <% } %>
    </div>
</div>