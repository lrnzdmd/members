<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./styles/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Members Only</title>
</head>

<body class="bg-emerald-50 dark:bg-gray-900 text-gray-800 dark:text-gray-200">
   <%- include('navbar')%>
<div class="mx-auto flex flex-col w-3/4 max-h-full overflow-scroll">
    <% messages.forEach(message => {%>
                    
        <div class="self-center w-full px-8 py-4 mt-8 bg-white rounded-lg shadow-lg dark:bg-gray-800">
            <h2 class="mt-2 text-xl font-semibold text-gray-800 dark:text-white md:mt-0">
                <%= message.title %>
            </h2>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-200">
                <%= message.message %>
            </p>
            <div class="flex justify-between items-center mt-4 w-full">
                <% if (currentUser) { %>
                    <p class="text-xs font-medium text-teal-600 dark:text-teal-300">
                        <%= currentUser.memberstatus === 'User' ? 'Some time ago...' : message.date.toString().substring(0, 24) %>
                    </p>
                    <p class="text-lg font-medium text-teal-600 dark:text-teal-300" tabindex="0" role="link">
                        <%= currentUser.memberstatus === 'User' ? 'Anonymous' : message.fullname %>
                    </p>
                <% } else { %>
                    <!-- Adjusted flexbox alignment here -->
                    <div class="flex justify-end items-center w-full">
                        <p class="text-lg font-medium text-teal-600 dark:text-teal-300" tabindex="0" role="link">
                            Anonymous
                        </p>
                    </div>
                <% } %>
            </div>
        </div>
    <% }); %>















    <% if (currentUser) { %>
        <div class="relative my-4">
            <div class="absolute inset-0 flex items-center" aria-hidden="true">
              <div class="w-full border-t border-teal-500"></div>
            </div>
            <div class="relative flex justify-center">
              <span class="bg-green-50 dark:bg-slate-900 px-1 text-md text-gray-50 font-semibold">New Message</span>
            </div>
          </div>

        <div class="container flex items-center justify-center w-1/2 min-h-fit px-6 mx-auto">
    <form class="flex flex-col w-full " action="/new-message" method="post">
        <input class="w-1/3 py-3 text-gray-700 bg-white border rounded-lg px-4 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-teal-400 dark:focus:border-teal-300 focus:ring-teal-300 focus:outline-none focus:ring focus:ring-opacity-40" name="title" type="text" placeholder="Title">
        <textarea class="w-full py-3 mt-2 text-gray-700 bg-white border rounded-lg px-4 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-teal-400 dark:focus:border-teal-300 focus:ring-teal-300 focus:outline-none focus:ring focus:ring-opacity-40"required name="message" id="message" placeholder="Message..."></textarea>
        <button class="w-1/3 self-end mt-2 px-6 py-3 text-sm font-medium tracking-wide capitalize transition-colors duration-300 transform bg-teal-600 dark:bg-teal-700 shadow-gray-950 rounded-lg hover:bg-teal-500 focus:outline-none focus:ring focus:ring-teal-300 focus:ring-opacity-50" type="submit">Submit</button>
    </form>
    <% } %>
</div>
</body>
</html>